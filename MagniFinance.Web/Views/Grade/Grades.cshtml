@{
    ViewBag.Title = "Grade List";
}

<div class="jumbotron">
    <h1>Grades</h1>
</div>

<div ng-controller="GradeController">
    <div class="row">
        <a class="btn btn-info" href="/grade/form">New</a>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Grade</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Student</th>
                    <th scope="col">#</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody ng-repeat="grade in grades">
                <tr>
                    <td>{{ grade.GradeValue }}</td>
                    <td>{{ grade.SubjectName }}</td>
                    <td>{{ grade.StudentName }}</td>
                    <td><a class="btn btn-info" href="/grade/form/{{grade.ID}}">Update</td>
                    <td><a class="btn btn-info" href="" ng-click="deleteGrade(grade.ID)">Delete</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/controllers/GradeController.js")
}