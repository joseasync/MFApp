@{
    ViewBag.Title = "Create";
}

<div class="jumbotron">
    <h1>Subject</h1>
</div>

<div ng-controller="SubjectController">

    <form name="subjectForm">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" name="name" ng-model="data.Name" ng-minlength="3" ng-maxlength="200" required />
                    <div ng-messages="subjectForm.name.$error" role="alert">
                        <code class="ie" ng-message="required">You did not enter a field</code>
                        <code class="ie" ng-message="minlength">Your field is too short</code>
                        <code class="ie" ng-message="maxlength">Your field is too long</code>
                        <code class="ie" ng-message-default>This field has an input error</code>
                    </div>
                </div>                
                <div class="form-group">
                    <label>Course</label>
                    <select ng-model="data.CourseId"
                            ng-options="course.ID as course.Name for course in courses" ng-selected="data.CourseId" required>
                    </select>
                </div>
                <div class="form-group">
                    <label>Teacher</label>
                    <select ng-model="data.TeacherId"
                            ng-options="teacher.ID as teacher.Name for teacher in teachers" ng-selected="data.TeacherId" required>
                    </select>
                </div>
                <div class="form-group">
                    <input type="button" id="btnSave" onclick="this.disabled=true" ng-disabled="subjectForm.$invalid" class="btn btn-primary" ng-click="savedata()" value="Save" />
                </div>

            </div>
            <div class="col-sm-2"></div>
        </div>

    </form>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/controllers/SubjectController.js")
}