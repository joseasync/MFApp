@{
    ViewBag.Title = "Create";
}

<div class="jumbotron">
    <h1>Course</h1>
</div>

<div ng-controller="CourseController">

    <form name="courseForm">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" name="name" ng-model="data.Name" ng-minlength="3" ng-maxlength="200" required />
                    <div ng-messages="courseForm.name.$error" role="alert">
                        <code class="ie" ng-message="required">You did not enter a field</code>
                        <code class="ie" ng-message="minlength">Your field is too short</code>
                        <code class="ie" ng-message="maxlength">Your field is too long</code>
                        <code class="ie" ng-message-default>This field has an input error</code>
                    </div>
                </div>
                <div class="form-group">
                    <input type="button" id="btnSave" onclick="this.disabled=true" ng-disabled="courseForm.$invalid" class="btn btn-primary" ng-click="savedata()" value="Save" />
                </div>

            </div>
            <div class="col-sm-2"></div>
        </div>

    </form>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/controllers/CourseController.js")
}