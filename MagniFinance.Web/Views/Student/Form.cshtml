@{
    ViewBag.Title = "Create";
}

<div class="jumbotron">
    <h1>Student</h1>
</div>

<div ng-controller="StudentController">

    <form name="studentForm">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" name="name" ng-model="data.Name" ng-minlength="3" ng-maxlength="200" required />
                    <div ng-messages="studentForm.name.$error" role="alert">
                        <code class="ie" ng-message="required">You did not enter a field</code>
                        <code class="ie" ng-message="minlength">Your field is too short</code>
                        <code class="ie" ng-message="maxlength">Your field is too long</code>
                        <code class="ie" ng-message-default>This field has an input error</code>
                    </div>

                </div>
                <div class="form-group">
                    <label>Registration Number</label>
                    <input class="form-control" type="number" name="registrationnumber" ng-model="data.RegistrationNumber" ng-minlength="1" ng-maxlength="8" ui-mask-placeholder required />
                    <div ng-messages="studentForm.registrationnumber.$error" role="alert">
                        <code class="ie" ng-message="required">You did not enter a field</code>
                        <code class="ie" ng-message="minlength">Your field is too short</code>
                        <code class="ie" ng-message="maxlength">Your field is too long</code>
                        <code class="ie" ng-message-default>This field has an input error</code>
                    </div>
                </div>
                <div class="form-group">
                    <label>Birthday</label>
                    <input type="date" name="birthday" data-date="" data-date-format="DD MM YYYY" ng-model="data.Birthday">
                    <div ng-messages="studentForm.birthday.$error" role="alert">
                        <code class="ie" ng-message="required">You did not enter a field</code>
                        <code class="ie" ng-message-default>This field has an input error</code>
                    </div>
                </div>
                <div class="form-group">
                    <input type="button" id="btnSave" onclick="this.disabled=true" ng-disabled="studentForm.$invalid" class="btn btn-primary" ng-click="savedata()" value="Save" />
                </div>

            </div>
            <div class="col-sm-2"></div>
        </div>

    </form>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/controllers/StudentController.js")
}